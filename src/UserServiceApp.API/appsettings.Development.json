{
  "Serilog": {
    "Using": [ "Serilog", "Serilog.Sinks.File", "Serilog.Enrichers.Environment" ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "C:/Temp/UserServiceAppLogs/log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] (Host: {MachineName}) - {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithEnvironmentUserName" ],
    "Properties": {
      "Application": "YourApplicationName"
    }
  },
  "JwtSettings": {
    "Secret": "UserServiceApp-Secret-Key-Long-Enought-For-Criptography",
    "TokenExpirationInMinutes": 30,
    "Issuer": "UserServiceApp",
    "Audience": "UserServiceApp"
  },
  "ConnectionStrings": {
    "MyDbContext": "Server=localhost,5444;Initial Catalog=SimpleReservationApp;User ID=sa;Password=Pass@word;TrustServerCertificate=True"
  },
  "AllowedHosts": "*"
}
